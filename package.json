{
	"name": "playlistify",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"main": "electron/main.cjs",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"desktop": "pnpm build && electron .",
		"pack": "pnpm build && electron-builder --dir",
		"dist": "pnpm build && electron-builder"
	},
	"devDependencies": {
		"electron": "^33.0.0",
		"electron-builder": "^24.13.3",
		"dotenv": "^16.4.5",
		"@eslint/compat": "^2.0.2",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^20",
		"drizzle-kit": "^0.31.9",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.3.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.49.2",
		"svelte-check": "^4.3.6",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.54.0",
		"vite": "^7.3.1",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.77.0",
		"@neondatabase/serverless": "^0.10.0",
		"drizzle-orm": "^0.45.1"
	},
	"build": {
		"appId": "com.playlistify.app",
		"productName": "Playlistify",
		"files": ["build", "electron", "package.json", "node_modules"],
		"asarUnpack": ["build/**", "node_modules/**"],
		"mac": {
			"category": "public.app-category.music",
			"target": ["dmg", "dir"]
		}
	}
}
